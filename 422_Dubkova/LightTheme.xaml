<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 🌸 Основные цвета -->
    <LinearGradientBrush x:Key="PrimaryBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F3EEFF" Offset="0.0"/>
        <!-- Светлый лавандовый -->
        <GradientStop Color="#E9E4FF" Offset="0.6"/>
        <!-- Пастельный сиреневый -->
        <GradientStop Color="#EAF0FF" Offset="1.0"/>
        <!-- Едва голубоватый оттенок -->
    </LinearGradientBrush>

    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#3B2B4F"/>
    <!-- Тёмно-сливовый текст -->
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#8E7CC3"/>
    <!-- Основной сиреневый акцент -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#B9A6FF"/>
    <!-- Мягкий лавандовый фон кнопок -->
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#8C77E0"/>
    <!-- Контур — насыщенный сиреневый -->

    <!-- Базовый шрифт -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>

    <!-- 🌿 Стиль окна -->
    <Style TargetType="Window" x:Key="WindowStyleKey">
        <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
    </Style>

    <!-- 🧩 Стиль DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="RowBackground" Value="#F3EEFF"/>
        <Setter Property="AlternatingRowBackground" Value="#F9F6FF"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HeadersVisibility" Value="All"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="#B9A6FF"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- 💬 Стиль для подсказок -->
    <Style x:Key="HintTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#9B90B8"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="{x:Null}">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- 🔐 Стиль капчи -->
    <Style x:Key="CaptchaTextBoxStyle" TargetType="TextBox">
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="{DynamicResource AccentForegroundBrush}"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <!-- 📝 Общий стиль текста -->
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="HeaderText">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource AccentForegroundBrush}"/>
    </Style>

    <!-- 🎨 Стиль кнопок -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2"
                        Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#C7B6FF"/>
                            <Setter Property="BorderBrush" Value="#9B87F5"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#A691FF"/>
                            <Setter Property="BorderBrush" Value="#8A77E0"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#DDD8EB"/>
                            <Setter Property="Foreground" Value="#A79DC5"/>
                            <Setter Property="BorderBrush" Value="#B0A5CE"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>