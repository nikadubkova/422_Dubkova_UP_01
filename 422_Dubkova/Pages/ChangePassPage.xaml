<Page x:Class="_422_Dubkova.Pages.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Смена пароля">

    <Grid>
        <StackPanel x:Name="ChangePassPanel" Margin="0,50,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="500">

            <!-- Логин -->
            <Grid Height="40" Margin="0,10,0,0" Width="300">
                <TextBox x:Name="TbLogin"
                         Width="300"
                         Height="30"
                         Background="Transparent"
                         ToolTip="Введите логин"
                         VerticalContentAlignment="Center" 
                         TextChanged="TbLogin_TextChanged"/>
                <TextBlock x:Name="txtHintLogin"
                           Text="Введите логин"
                           Style="{StaticResource HintTextBlockStyle}"
                           Margin="10,0,0,0"
                           MouseLeftButtonUp="txtHintLogin_MouseLeftButtonUp"
                           IsHitTestVisible="True"/>
            </Grid>

            <!-- Текущий пароль -->
            <Grid Height="40" Margin="0,10,0,0" Width="300">
                <PasswordBox x:Name="CurrentPasswordBox"
                             Width="300"
                             Height="30"
                             Background="Transparent"
                             ToolTip="Введите текущий пароль"
                             VerticalContentAlignment="Center" 
                             PasswordChanged="CurrentPasswordBox_PasswordChanged"/>
                <TextBlock x:Name="txtHintCurrentPass"
                           Text="Введите текущий пароль"
                           Style="{StaticResource HintTextBlockStyle}"
                           Margin="10,0,0,0"
                           MouseLeftButtonUp="txtHintCurrentPass_MouseLeftButtonUp"
                           IsHitTestVisible="True"/>
            </Grid>

            <!-- Новый пароль -->
            <Grid Height="40" Margin="0,10,0,0" Width="300">
                <PasswordBox x:Name="NewPasswordBox"
                             Width="300"
                             Height="30"
                             Background="Transparent"
                             ToolTip="Введите новый пароль"
                             VerticalContentAlignment="Center" 
                             PasswordChanged="NewPasswordBox_PasswordChanged"/>
                <TextBlock x:Name="txtHintNewPass"
                           Text="Введите новый пароль"
                           Style="{StaticResource HintTextBlockStyle}"
                           Margin="10,0,0,0"
                           MouseLeftButtonUp="txtHintNewPass_MouseLeftButtonUp"
                           IsHitTestVisible="True"/>
            </Grid>

            <!-- Подтверждение нового пароля -->
            <Grid Height="40" Margin="0,10,0,0" Width="300">
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Width="300"
                             Height="30"
                             Background="Transparent"
                             ToolTip="Подтвердите новый пароль"
                             VerticalContentAlignment="Center" 
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                <TextBlock x:Name="txtHintConfirmPass"
                           Text="Подтвердите новый пароль"
                           Style="{StaticResource HintTextBlockStyle}"
                           Margin="10,0,0,0"
                           MouseLeftButtonUp="txtHintConfirmPass_MouseLeftButtonUp"
                           IsHitTestVisible="True" />
            </Grid>

            <!-- Кнопка сохранения -->
            <Button x:Name="SaveChangesButton"
                    Content="Сохранить изменения"
                    Width="300"
                    Height="30"
                    Margin="0,20,0,0"
                    Click="SaveChanges_Click"/>
        </StackPanel>
    </Grid>
</Page>
