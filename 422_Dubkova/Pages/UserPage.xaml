<Page x:Class="_422_Dubkova.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Панель пользователя">

    <Grid Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <WrapPanel Orientation="Horizontal"  HorizontalAlignment="Stretch" Margin="0,10,0,10" >

            <TextBlock Text="Введите ФИО для поиска:" FontSize="12" VerticalAlignment="Center"/>

            <TextBox x:Name="fioFilterTextBox" Margin="7,0,0,0" MinWidth="150"
                     TextChanged="fioFilterTextBox_TextChanged" />

            <TextBlock Text="Сортировка по ФИО:" Margin="10,0,0,0" FontSize="12" VerticalAlignment="Center"/>
            <ComboBox x:Name="sortComboBox" SelectionChanged="sortComboBox_SelectionChanged" Margin="7,0,0,0" Width="130" SelectedIndex="0" VerticalContentAlignment="Center" VerticalAlignment="Center">
                <ComboBoxItem Content="По возрастанию"/>
                <ComboBoxItem Content="По убыванию"/>
            </ComboBox>

            <CheckBox x:Name="onlyAdminCheckBox" Content="Только администраторы" Margin="10,0,0,0"
                      VerticalContentAlignment="Center"
                      IsChecked="False"
                      Checked="onlyAdminCheckBox_Checked"
                      Unchecked="onlyAdminCheckBox_Unchecked" />

            <Button x:Name="clearFiltersButton" Content="Очистить фильтр" Margin="15,0,0,0" Padding="10,5"
                    Height="30" FontSize="12" Click="clearFiltersButton_Click_1"/>
        </WrapPanel>

        <!-- Список пользователей -->
        <ListView x:Name="ListUser" Grid.Row="1" Margin="10" HorizontalContentAlignment="Center" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="220" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{Binding FIO}" TextWrapping="Wrap" Width="200" 
                                   TextAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,0,0,5" />

                        <Image Grid.Row="1" Width="200" Height="200" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="Photo" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.TargetNullValue>
                                        <BitmapImage UriSource="D:\Аксёнова\УП окт-ноя 2025\422_Dubkova\422_Dubkova\422_Dubkova\ava.jpg"/>
                                    </Binding.TargetNullValue>
                                    <Binding.FallbackValue>
                                        <BitmapImage UriSource="D:\Аксёнова\УП окт-ноя 2025\422_Dubkova\422_Dubkova\422_Dubkova\ava.jpg"/>
                                    </Binding.FallbackValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock Grid.Row="2" Text="{Binding Role}" TextAlignment="Center" Width="200" 
                                   FontSize="14" Margin="0,5,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
