<Page x:Class="_422_Dubkova.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel Width="350" HorizontalAlignment="Center" VerticalAlignment="Center" >

            <!-- Логин -->
            <Grid Margin="0,5">
                <TextBox x:Name="txtbxLog"
                     Width="350" Height="30"
                     Background="Transparent"
                     ToolTip="Введите логин или почту"
                     TextChanged="txtbxLog_TextChanged"/>
                <TextBlock x:Name="lblLogHitn"
                       Text="Введите логин"
                       Style="{StaticResource HintTextBlockStyle}"
                       Margin="10,0,0,0"
                       IsHitTestVisible="True"
                       MouseLeftButtonUp="lblLogHitn_MouseLeftButtonUp"
                       />
            </Grid>

            <!-- Пароль -->
            <Grid Margin="0,5">
                <PasswordBox x:Name="passBxFrst"
                         Width="350" Height="30"
                         Background="Transparent"
                         ToolTip="Введите пароль"
                         PasswordChanged="passBxFrst_PasswordChanged"/>
                <TextBlock x:Name="lblPassHitn"
                       Text="Введите пароль"
                       Style="{StaticResource HintTextBlockStyle}"
                       Margin="10,0,0,0"
                       IsHitTestVisible="True"
                       MouseLeftButtonUp="lblPassHitn_MouseLeftButtonUp"/>
            </Grid>

            <!-- Подтверждение пароля -->
            <Grid Margin="0,5">
                <PasswordBox x:Name="passBxScnd"
                         Width="350" Height="30"
                         Background="Transparent"
                         ToolTip="Повторите пароль"
                         PasswordChanged="passBxScnd_PasswordChanged"/>
                <TextBlock x:Name="lblPassSecHitn"
                       Text="Повторите пароль"
                       Style="{StaticResource HintTextBlockStyle}"
                       Margin="10,0,0,0"
                       IsHitTestVisible="True"
                       MouseLeftButtonUp="lblPassSecHitn_MouseLeftButtonUp"/>
            </Grid>

            <!-- ФИО -->
            <Grid Margin="0,5">
                <TextBox x:Name="txtbxFIO"
                     Width="350" Height="30"
                     Background="Transparent"
                     ToolTip="Введите ФИО"
                     TextChanged="txtbxFIO_TextChanged"/>
                <TextBlock x:Name="lblFioHitn"
                       Text="Введите ФИО"
                       Style="{StaticResource HintTextBlockStyle}"
                       Margin="10,0,0,0"
                       IsHitTestVisible="True"
                       MouseLeftButtonUp="lblFioHitn_MouseLeftButtonUp"/>
            </Grid>

            <!-- Выбор роли -->
            <Grid Margin="0,10">
                <ComboBox x:Name="comboBxRole"
                      Width="350" Height="30"
                      ToolTip="Выберите роль"
                      VerticalAlignment="Center">
                    <ComboBoxItem Content="user" IsSelected="True" />
                    <ComboBoxItem Content="admin"/>
                </ComboBox>
            </Grid>

            <!-- Кнопка регистрации -->
            <Button x:Name="regButton"
                Content="Зарегистрироваться"
                Width="350" Height="35"
                Margin="0,20,0,0"
                Click="regButton_Click"/>

        </StackPanel>
    </Grid>
</Page>
