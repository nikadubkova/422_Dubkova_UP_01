<Page x:Class="_422_Dubkova.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление пользователя">

    <Grid>
        <StackPanel Margin="20">

            <!-- Логин -->
            <Grid Width="500" Height="30" Margin="0,10">
                <TextBox x:Name="TBLogin" Text="{Binding Login}" Height="30" VerticalAlignment="Top" TextChanged="TBLogin_TextChanged"/>
                <TextBlock x:Name="LoginHintText" Text="Логин" VerticalAlignment="Center" Margin="5,0" Style="{StaticResource HintTextBlockStyle}"/>
            </Grid>

            <!-- Пароль -->
            <Grid Width="500" Height="30" Margin="0,10">
                <TextBox x:Name="TBPass" Text="{Binding Password}" Height="30" VerticalAlignment="Top" TextChanged="TBPass_TextChanged"/>
                <TextBlock x:Name="PassHintText" Text="Пароль" VerticalAlignment="Center" Margin="5,0" Style="{StaticResource HintTextBlockStyle}"/>
            </Grid>

            <!-- Роль -->
            <Grid Width="500" Height="30" Margin="0,10">
                <ComboBox x:Name="cmbRole" Height="30" VerticalAlignment="Top"  SelectionChanged="cmbRole_SelectionChanged"
                          SelectedValuePath="Content"
                          SelectedValue="{Binding Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBoxItem Content="admin" />
                    <ComboBoxItem Content="user" IsSelected="True" />
                </ComboBox>
            </Grid>

            <!-- ФИО -->
            <Grid Width="500" Height="30" Margin="0,10">
                <TextBox x:Name="TBFio" Text="{Binding FIO}" Height="30" VerticalAlignment="Top" TextChanged="TBFio_TextChanged"/>
                <TextBlock x:Name="FioHintText" Text="ФИО" VerticalAlignment="Center" Margin="5,0" Style="{StaticResource HintTextBlockStyle}"/>
            </Grid>

            <!-- Фото -->
            <Grid Width="500" Height="30" Margin="0,10">
                <TextBox x:Name="TBPhoto" Text="{Binding Photo}" Height="30" VerticalAlignment="Top" TextChanged="TBPhoto_TextChanged"/>
                <TextBlock x:Name="PhotoHintText" Text="Фото (ссылка или путь)" VerticalAlignment="Center" Margin="5,0" Style="{StaticResource HintTextBlockStyle}"/>
            </Grid>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Name="ButtonSave" Content="Сохранить" Width="100" Height="30" Margin="10,0" Click="ButtonSave_Click"/>
                <Button Name="ButtonClean" Content="Очистить" Width="100" Height="30" Margin="10,0" Click="ButtonClean_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
