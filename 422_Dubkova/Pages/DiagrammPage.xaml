<Page x:Class="_422_Dubkova.Pages.DiagrammPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova.Pages"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Диаграммы">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">

            <TextBlock Text="Пользователь:" VerticalAlignment="Center" Margin="0,0,10,0" />
            <ComboBox x:Name="CmbUser"
                      Width="150"
                      DisplayMemberPath="FIO"
                      SelectionChanged="UpdateChart"
                      />

            <TextBlock Text="Тип диаграммы:" VerticalAlignment="Center" Margin="10,0,10,0" />
            <ComboBox x:Name="CmbDiagram"
                      Width="150"
                      SelectionChanged="UpdateChart"
                      />

            <Button Content="Экспорт в Excel"
                    Width="120"
                    Click="ExportToExcel_Click"
                    />

            <Button Content="Экспорт в Word"
                    Width="120"
                    Click="ExportToWord_Click"
                    />

        </StackPanel>
        <WindowsFormsHost Grid.Row="1" Margin="5" x:Name="WindowsFormsHostChart">
            <charts:Chart x:Name="ChartPayments">
                <charts:Chart.Legends>
                    <charts:Legend />
                </charts:Chart.Legends>
            </charts:Chart>
        </WindowsFormsHost>
    </Grid>
</Page>
