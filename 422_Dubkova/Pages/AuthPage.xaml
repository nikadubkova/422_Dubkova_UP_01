<Page x:Class="_422_Dubkova.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Frame x:Name="AuthFrame" NavigationUIVisibility="Hidden"/>

        <StackPanel x:Name="AuthPanel" Margin="0,50,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="500" >

            <!-- Логин -->
            <Grid Height="40" Margin="0,10,0,0" Width="300">
                <TextBox x:Name="TextBoxLogin"
                     Width="300"
                     Height="30"
                     Background="Transparent"
                     ToolTip="Введите логин"
                     TextChanged="TextBoxLogin_TextChanged"
                     VerticalContentAlignment="Center" />
                <TextBlock x:Name="txtHintLogin"
                       Text="Введите логин"
                       Style="{StaticResource HintTextBlockStyle}"
                       Margin="10,0,0,0"
                       MouseLeftButtonUp="txtHintLogin_MouseLeftButtonUp"/>
            </Grid>

            <!-- Пароль -->
            <Grid Height="40" Margin="0,10,0,0" Width="300">
                <PasswordBox x:Name="PasswordBox"
                         Width="300"
                         Height="30"
                         Background="Transparent"
                         ToolTip="Введите пароль"
                         PasswordChanged="PasswordBox_PasswordChanged"
                         VerticalContentAlignment="Center" />
                <TextBlock x:Name="txtHintPass"
                       Text="Введите пароль"
                       Style="{StaticResource HintTextBlockStyle}"
                       Margin="10,0,0,0"
                       MouseLeftButtonUp="txtHintPass_MouseLeftButtonUp"/>
            </Grid>

            <!-- Капча -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" Visibility="Hidden" x:Name="CaptchaPanel" VerticalAlignment="Center" HorizontalAlignment="Center">

                <Label Content="Капча:"  x:Name="labelCaptcha" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="captcha"
                     Style="{StaticResource CaptchaTextBoxStyle}"
                     ContextMenu="{x:Null}"
                     IsReadOnly="True"
                     CommandManager.PreviewExecuted="textBox_PreviewExecuted" />

                <TextBox x:Name="captchaInput"
                     Width="120"
                     Height="30"
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center"
                     Margin="0,0,10,0"/>

                <Button x:Name="submitCaptcha"
                    Content="Подтвердить"
                    Width="110"
                    Height="30"
                    Click="submitCaptcha_Click"/>
            </StackPanel>

            <!-- Кнопки -->
            <Button x:Name="ButtonEnter"
                Content="Вход"
                Width="300"
                Height="30"
                Margin="0,20,0,0"
                Click="ButtonEnter_OnClick"/>

            <Button x:Name="ButtonReg"
                Content="Регистрация"
                Width="300"
                Height="30"
                Margin="0,10,0,0"
                Click="ButtonReg_Click"/>

            <Button x:Name="ButtonChangePassword"
                Content="Смена пароля"
                Width="300"
                Height="30"
                Margin="0,10,0,0"
                Click="ButtonChangePassword_Click"/>
        </StackPanel>
    </Grid>
</Page>
